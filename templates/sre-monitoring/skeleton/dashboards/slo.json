      "targets": [
        {
          "expr": "(1 - sum(rate(http_requests_total{status=~\"5..\", service=~\"$service\"}[$__rate_interval])) / sum(rate(http_requests_total{service=~\"$service\"}[$__rate_interval]))) * 100",
