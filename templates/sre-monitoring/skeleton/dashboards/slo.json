{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": "Prometheus",
        "enable": true,
        "expr": "changes(process_start_time_seconds{service=~\"$service\"}[5m]) > 0",
        "iconColor": "orange",
        "name": "Deployments",
        "step": "1m",
        "titleFormat": "Deployment"
      }
    ]
  },
  "description": "SLO tracking dashboard for ${{ values.name }}",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "panels": [],
      "title": "Error Budget Status",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "description": "Current 30-day rolling availability",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 99
              },
              {
                "color": "green",
                "value": 99.9
              }
            ]
          },
          "unit": "percent",
          "decimals": 3
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 1
      },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "(1 - sum(increase(http_requests_total{status=~\"5..\", service=~\"$service\"}[30d])) / sum(increase(http_requests_total{service=~\"$service\"}[30d]))) * 100",
          "legendFormat": "30d Availability",
          "refId": "A"
        }
      ],
      "title": "30-Day Availability",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Percentage of error budget remaining",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 25
              },
              {
                "color": "green",
                "value": 50
              }
            ]
          },
          "unit": "percent",
          "max": 100,
          "min": 0
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 1
      },
      "id": 3,
      "options": {
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "expr": "clamp_min(100 - (sum(increase(http_requests_total{status=~\"5..\", service=~\"$service\"}[30d])) / sum(increase(http_requests_total{service=~\"$service\"}[30d])) / 0.001 * 100), 0)",
          "legendFormat": "Budget Remaining",
          "refId": "A"
        }
      ],
      "title": "Error Budget Remaining",
      "type": "gauge"
    },
    {
      "datasource": "Prometheus",
      "description": "Current burn rate (1 = normal, >1 = burning faster than sustainable)",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "orange",
                "value": 6
              },
              {
                "color": "red",
                "value": 14.4
              }
            ]
          },
          "unit": "none",
          "decimals": 2
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 1
      },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{status=~\"5..\", service=~\"$service\"}[1h])) / sum(rate(http_requests_total{service=~\"$service\"}[1h]))) / 0.001",
          "legendFormat": "Burn Rate",
          "refId": "A"
        }
      ],
      "title": "Current Burn Rate (1h)",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Estimated time until budget exhaustion at current rate",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 86400
              },
              {
                "color": "green",
                "value": 604800
              }
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 1
      },
      "id": 5,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "(2592000 - (sum(increase(http_requests_total{status=~\"5..\", service=~\"$service\"}[30d])) / sum(increase(http_requests_total{service=~\"$service\"}[30d])) * 2592000)) / ((sum(rate(http_requests_total{status=~\"5..\", service=~\"$service\"}[1h])) / sum(rate(http_requests_total{service=~\"$service\"}[1h]))) / (1/2592000))",
          "legendFormat": "Time to Exhaustion",
          "refId": "A"
        }
      ],
      "title": "Time to Budget Exhaustion",
      "type": "stat"
    },
    {
